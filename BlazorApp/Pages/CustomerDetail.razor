@page "/customer/{CustomerId}"


<section class="employee-detail p-4 rounded">
    <h1 class="page-title"><span class="oi oi-person me-4" aria-hidden="true"></span>@Customer.FirstName @Customer.LastName Details</h1>
    <br />
    <div class="col-12 row">

        <div class="col-10 row">
            <div class="col-12 col-xxl-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">First name</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Customer.FirstName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Last name</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Customer.LastName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Gender</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Customer.Gender</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Age</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Customer.Age</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Marital Status</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Customer.MaritalStatus</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Customer.Email</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Phone Number</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Customer.PhoneNumber</label>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xxl-4">
            </div>
        </div>
        <div class="form-group row d-inline-flex justify-content-between w-100">
            <label class="col-sm-4 col-form-label">

                <a href="@($"customer/{Customer.CustomerId}/edit")" class="btn btn-outline-primary btn-sm mb-1">
                    <span class="oi oi-pencil" aria-hidden="true"></span> Edit
                </a>
                <a href="@($"customers")" class="btn btn-outline-primary btn-sm mb-1">
                    Back
                </a>
            </label>
            <label class="col-sm-auto col-form-label text-right">
                <button class="btn btn-danger btn-sm mb-1" @onclick="DeleteCustomer">
                    <span class="oi oi-trash" aria-hidden="true"></span> Delete
                </button>
            </label>
        </div>
    </div>
</section>
