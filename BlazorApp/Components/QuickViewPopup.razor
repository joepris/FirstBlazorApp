@if (_customer != null)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Employee Summary</h5>
                    <button type="button" class="close btn btn-lg" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col row">
                        <div class="col-12 col-sm-8">

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">First name</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_customer.FirstName</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Last name</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_customer.LastName</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Age</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_customer.Age</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Email</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_customer.Email</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-controls float-end">
                        <a href="@($"customer/{Customer.CustomerId}/edit")" class="btn btn-outline-primary btn-sm mb-1">
                            <span class="oi oi-pencil" aria-hidden="true"></span> Edit
                        </a>
                        <button type="button" class="btn btn-outline-primary btn-sm mb-1" @onclick="@Close">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
